@article{Hayes2022,
  title = {Integrating Criticality Concepts into Road Network Disruption Assessments for Volcanic Eruptions},
  author = {Hayes, Josh L. and Biass, S{\'e}bastien and Jenkins, Susanna F. and Meredith, Elinor S. and Williams, George T.},
